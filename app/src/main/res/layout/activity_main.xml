<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context=".view.MainActivity">

    <ImageView
        android:id="@+id/iv_logo"
        android:layout_width="@dimen/logo_size"
        android:layout_height="@dimen/logo_size"
        android:src="@drawable/urban_logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <View
        android:id="@+id/side_bar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/colorPrimaryLight"
        app:layout_constraintTop_toBottomOf="@id/et_search_bar"
        app:layout_constraintBottom_toBottomOf="@id/iv_logo"
        app:layout_constraintStart_toStartOf="@id/et_search_bar"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <EditText
        android:id="@+id/et_search_bar"
        android:layout_height="0dp"
        android:layout_width="0dp"
        android:textColor="@color/colorPrimaryLight"
        android:background="@color/colorUrbanBlue"
        android:textSize="20sp"
        android:gravity="center_vertical"
        android:paddingLeft="8dp"
        android:maxLines="1"
        android:lines="1"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/iv_search_icon"
        app:layout_constraintStart_toEndOf="@id/iv_logo"
        app:layout_constraintEnd_toStartOf="@id/iv_search_icon"
        tools:ignore="RtlSymmetry"
        android:paddingStart="8dp" />
    <ImageView
        android:id="@+id/iv_search_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorUrbanBlue"
        android:src="@drawable/ic_search"
        app:layout_constraintTop_toTopOf="@id/et_search_bar"
        app:layout_constraintEnd_toStartOf="@id/iv_sort_icon"
        />
    <ImageView
        android:id="@+id/iv_sort_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/colorUrbanBlue"
        android:src="@drawable/ic_sort"
        app:layout_constraintTop_toTopOf="@id/et_search_bar"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <ListView
        android:id="@+id/lv_sort_options"
        android:layout_height="wrap_content"
        android:layout_width="240dp"
        android:elevation="2dp"
        android:visibility="invisible"
        android:background="@color/colorUrbanBlue"
        app:layout_constraintTop_toBottomOf="@id/iv_sort_icon"
        app:layout_constraintEnd_toEndOf="parent"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcycl_terms"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        app:layout_constraintTop_toBottomOf="@id/iv_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>